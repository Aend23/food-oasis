{
  "name": "starter",
  "version": "1.0.0",
  "description": "Starter Node Web API application",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon server.js -ignore './client' ",
    "heroku-postbuild": "cd client && npm i && npm run build",
    "server": "nodemon server.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "format": "prettier --write  \"**/*.js\" ",
    "lint": "eslint -c .eslintrc.js --ignore-path .eslintignore  **/*.{js,jsx}",
    "lint:fix": "eslint -c .eslintrc.js --ignore-path .eslintignore --fix  **/*.{js,jsx}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --config .prettierrc.yml --write",
      "git add"
    ],
    "**/*.{js,jsx}": [
      "eslint -c .eslintrc.js --ignore-path .eslintignore --fix",
      "git add"
    ]
  },
  "author": "John Darragh",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-pino-logger": "^4.0.0",
    "json-2-csv": "^3.5.7",
    "jsonwebtoken": "^8.5.1",
    "massive": "^6.1.1",
    "moment": "2.24.0",
    "nodemailer": "^6.3.1",
    "nodemon": "^1.19.3",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^8.0.3",
    "pino-noir": "^2.2.1",
    "prettier": "^2.0.5",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "babel-eslint": "10.1.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-flowtype": "^4.4.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "2.0.5"
  }
}
